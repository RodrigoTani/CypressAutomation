{
  "name": "projetos_cypress",
  "version": "1.0.0",
  "main": "cypress.config.js",
  "scripts": {
    "cy:run": "cypress run",
    "merge-reports": "mochawesome-merge cypress/reports/*.json > cypress/reports/report.json",
    "generate-report": "marge cypress/reports/report.json --reportDir cypress/reports/html",
    "test": "npm run cy:run && npm run merge-reports && npm run generate-report"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.0",
    "cypress": "^14.3.3",
    "cypress-mochawesome-reporter": "^3.5.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
